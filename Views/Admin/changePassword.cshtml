                    <label for="inputEmail" class="col-md-4 control-label">Previous Password:</label>
                    <div class="col-md-8">
                        <input type="password" class="form-control" id="inputEmail" name="pPassword" placeholder="Previous Password">
                    </div>
                </div>
            </div>
        </div>
      
        <div class="row">
            <div class="col-sm-6 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <label for="inputEmail" class="col-md-4 control-label">New Password</label>
                    <div class="col-md-8">
                        <input type="password" class="form-control" id="inputEmail" name="nPassword" placeholder="New Password">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <button for="inputEmail" class="btn">Confirm Password</button>

