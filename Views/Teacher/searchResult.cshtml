@model cmsbeta5.Models.Subject
@using cmsbeta5.Models
@{
    ViewBag.Title = "Index";

}




<head>
    <title>Home</title>






</head>
<body>

    <nav class="navbar navbar-default" style="background-color:#F9864D; color:white;">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" style="background-color:#F9864D; color:white;" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only" style="background-color:#F9864D; color:white;">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#" style="background-color:#F9864D; color:white;">FUFCIT</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">



                    <li>
                        <div class="btn-group">
                            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                                Classes
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (Subject g in ViewBag.list)
                                {
                                    <li><a>@Html.ActionLink(g.Name + " " + g.ClassName, "ClassMenu", new { className = g.ClassName })</a></li>
                                }
                            </ul>
                        </div>
                    </li>




                </ul>



                <ul class="nav navbar-nav navbar-right">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                            @ViewBag.teacher.Name
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="\Main" style="background-color:#F9864D; color:white;">Logout</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="\Teacher\changePassword" style="background-color:#F9864D; color:white;">Change Password </a></li>

                        </ul>
                    </div>

                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <form class="form-horizontal" role="form" action="\Teacher\searchResult" method="post">
        <div class="row">
            <div class="col-sm-6 col-lg-4 col-lg-offset-4">

                <label for="inputEmail" class="col-md-4 col-lg-4 col-lg-offset-4">Freeze Account</label>



            </div>
        </div>

        <div class="row">
        </div>
        <div class="row">

            <div class="col-sm-6 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <label for="inputEmail" class="col-md-4 control-label">Enter The Keywords to Search :</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="inputEmail" name="keywords" placeholder="e.g Bsef12m555">
                        <input type="text" class="form-control" value=@ViewBag.teacher.Name id="inputEmail" name="teacherName" style="visibility:hidden;">
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-6 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <button class="btn">Search</button>

                </div>
            </div>
        </div>
    </form>
    <table class="table table-bordered table-responsive" style="width:600px;margin-left:420px;color:green;margin-top:200px">
        <tr>
            <th>
                Student Id
            </th>
            <th>
                Assignment Description
            </th>
            <th>
                Class Name
            </th>
        </tr>
        @foreach (string[] arr in ViewBag.listofStudents)
        {
            <tr>
                <td>
                    @arr[0]
                </td>
                <td>
                    @arr[1]

                </td>
                <td>
                    @arr[2]
                </td>

            </tr>

        }
    </table>
</body>